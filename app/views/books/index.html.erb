<h1>New Book</h1>

<%= form_with model: @book do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <p><%= f.submit 'Create Book' %></p>
<% end %>

<h1>Books</h1>

<% @books.each do |book| %>

<p>Title</p>
<span><%= book.title %></span>

<p>Opinion</p>
<span><%= book.body %></span>

<% end %>


<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>

    <h3>introduction</h3>
    <span><%= @user.introduction %></span>
</div>

<span><%= link_to "Edit", edit_user_path(@user.id) %></span>

<h1>New Book</h1>

<%= form_with model: @book do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <p><%= f.submit 'Create Book' %></p>
<% end %>

<h1>Books</h1>

<% @books.each do |book| %>

<%= image_tag book.user.get_profile_image(100,100) %>

<p>Title</p>
<span><%= link_to book.title, book_path(book.id) %></span>

<p>Opinion</p>
<span><%= book.body %></span>

<% end %>


<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <p><%= f.submit 'Update Book' %></p>
<% end %>

<span><%= link_to "Show", book_path(@book.id) %></span>
<span>|</span>
<span><%= link_to "Back", book_path %></span>


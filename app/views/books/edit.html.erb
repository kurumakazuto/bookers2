<div class="container">
    <div class="row">
        <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
          <h3>Editing Book</h3>
          
          <% if @book.errors.any? %>
            <%= @book.errors.count %>errors prohibited this obj from being saved:
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          
          <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
          
              <h6>Title</h6>
              <%= f.text_field :title %>
          
              <h6>Opinion</h6>
              <%= f.text_area :body %>
          
              <p><%= f.submit 'Update Book' ,class:"text-white" , style:"background-color:#32cd32;"%></p>
          <% end %>
          
          <span><%= link_to "Show", book_path(@book.id) %></span>
          <span>|</span>
          <span><%= link_to "Back", book_path %></span>
        </div>
    </div>
</div>
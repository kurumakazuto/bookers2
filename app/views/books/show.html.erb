<div>
  <%= flash[:notice] %>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-3">
           <%= render 'list', user: @user, book: @book %>
        </div>
        <div class="col-md-8 offset-md-1">
          
          <h1>Book detail</h1>
          <table class="table table-striped">
            <tbody>
              <tr>
                 <th><%= link_to user_path(@book.user_id) do %>
                    <%= image_tag @book.user.get_profile_image(100,100) %>
                    <%= @book.user.name %>
                    <% end %>
                 </th>  
          
                 <th><%= link_to @book.title, book_path(@book.id) %></th>
          
                 <th><%= @book.body %></th>
          
              <% if @book.user == current_user %>
                 <th><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-secondary", style:"width:50px; background-color:#32cd32;" %></th>
                 <th><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-secondary", style:"width:100px; background-color:#b22222;" %></th>
              <% end %>
              </tr>
            </tbody>
          </table>
       </div>
    </div>
</div>



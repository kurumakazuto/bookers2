<h1>New Book</h1>

<%= form_with model: @book do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <p><%= f.submit 'Create Book' %></p>
<% end %>

<h1>Book detail</h1>
<%= link_to @book.title, edit_book_path(@book.id) %>

<p><%= @book.body %></p>

<% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book.id) %>
<% end %>

<% if @book.user == current_user %>
  <%= link_to "Destroy", book_path(@book), method: :delete %>
<% end %>



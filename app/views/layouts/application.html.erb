<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/ef1c4645aa.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <div class="social"></div></header>
  </head>

  <body>
    
    <% if user_signed_in? %>
    <div class="container-fluid">
     <header class="row px-5 py-4" >
        <div class="col-2 offset-1">
      <li>
        <%= link_to "Bookers", root_path,class:"text-white" %>
      </li>
      </div>
      <div class="col-4 offset-3">
        <div class="row">
          <div class="col-3">
            <li>
               <%= link_to user_path(current_user),class:"text-white" do %>
                     <i class="fa-solid fa-house"></i>
                     Home
                 <% end %>
            </li>
          </div>
          <div class="col-3">
            <li>
              <%= link_to "Users", users_path %>
            </li>
          </div> 
          <div class="col-3">
            <li>
              <%= link_to "Books", books_path %>
            </li>
          </div>
          <div class="col-3">
            <li>
              <%= link_to "Log out", destroy_user_session_path, method: :delete %>
            </li>
          </div>
        </div>
      </div>
     </header>
    </div>
            
    <% else %>
    <div class="container-fluid">
     <header class="row px-5 py-4" >
        <div class="col-2 offset-1">
      <li>
        <%= link_to "Bookers", root_path %>
      </li>
      </div>
      <div class="col-4 offset-3">
        <div class="row">
          <div class="col-3">
            <li class="fa-solid fa-house">
              <%= link_to "Home", root_path %>
            </li>
          </div>
          <div class="col-3">
            <li>
              <%= link_to "About", about_path %>
            </li>
          </div> 
          <div class="col-3">
            <li>
              <%= link_to "Sign up", new_user_registration_path %>
            </li>
          </div>
          <div class="col-3">
            <li>
              <%= link_to "Log in", new_user_session_path %>
            </li>
          </div>
        </div>
      </div>
     </header>
    </div>
    <% end %>
  
  
    <%= yield %>
    
  </body>
  <footer>CopyRight Infratop.inc</footer>
</html>

<i class="fa-solid fa-house"></i>
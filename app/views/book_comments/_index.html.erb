<table>
   <% book.book_comments.each do |book_comment| %>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= image_tag book_comment.user.get_profile_image(100,100) %>
      <br><%= book_comment.user.name %></td>
      <td><%= book_comment.comment %></td>
      <% if book_comment.user == current_user %>
      <td><%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, class:"btn btn-danger",remote: true %></td>
      <% end %>
    </tr>
  </tbody>
  <% end %>
</table>
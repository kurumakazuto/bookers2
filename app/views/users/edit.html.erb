<div class="container">
    <div class="row">
        <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
          <h3>User info</h3>
          
          <% if @user.errors.any? %>
            <%= @user.errors.count %>errors prohibited this obj from being saved:
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          
          <%= form_with model: @user do |f| %>
          
            <h6>Name</h6>
            <%= f.text_field :name %>
            
            <h6>Image</h6>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          
            <h6>Introduction</h6>
            <%= f.text_area :introduction %>
          
            <p><%= f.submit 'Upudate User',class:"text-white" , style:"background-color:#808080;" %></p>
          
          <% end %>
        </div>
    </div>
</div>

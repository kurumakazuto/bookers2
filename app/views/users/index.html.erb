<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>

    <h3>introduction</h3>
    <span><%= @user.introduction %></span>
</div>

<h1>New Book</h1>

<%= form_with model: @book do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <p><%= f.submit 'Create Book' %></p>
<% end %>

<h1>Users</h1>

<% @users.each do |user| %>

<p>image</p>
<%= image_tag user.get_profile_image(80,80) %>

<p>name</p>
<span><%= user.name %></span>



<% end %>

